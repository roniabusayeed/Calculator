<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="515" Width="350">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0"
               Grid.Row="0" 
               Grid.ColumnSpan="4"
               Content="0"
               HorizontalContentAlignment="Right"
               VerticalContentAlignment="Bottom"
               x:Name="resultLabel"/>
        
        <Button Content="AC"
                Grid.Row="1"
                Grid.Column="0"
                x:Name="acButton"
                Style="{StaticResource specialButtonStyle}"/>
        <Button Content="+/-"
                Grid.Row="1"
                Grid.Column="1"
                x:Name="negativeButton"
                Style="{StaticResource specialButtonStyle}"/>
        <Button Content="%"
                Grid.Row="1"
                Grid.Column="2"
                x:Name="percentageButton"
                Style="{StaticResource specialButtonStyle}"/>
        <Button Content="/"
                Grid.Row="1"
                Grid.Column="3"
                x:Name="divideButton"
                Style="{StaticResource operatorButtonStyle}"/>

        
        <Button Content="7"
                Grid.Row="2"
                Grid.Column="0"
                x:Name="d7Button"
                Style="{StaticResource numberButtonStyle}"
                />
        <Button Content="8"
                Grid.Row="2"
                Grid.Column="1"
                x:Name="d8Button"
                Style="{StaticResource numberButtonStyle}"
                />
        <Button Content="9"
                Grid.Row="2"
                Grid.Column="2"
                x:Name="d9Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="x"
                Grid.Row="2"
                Grid.Column="3"
                x:Name="multiplyButton"
                Style="{StaticResource operatorButtonStyle}"/>

        
        <Button Content="4"
                Grid.Row="3"
                Grid.Column="0"
                x:Name="d4Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="5"
                Grid.Row="3"
                Grid.Column="1"
                x:Name="d5Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="6"
                Grid.Row="3"
                Grid.Column="2"
                x:Name="d6Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="-"
                Grid.Row="3"
                Grid.Column="3"
                x:Name="subtractButton"
                Style="{StaticResource operatorButtonStyle}"/>

        <Button Content="1"
                Grid.Row="4"
                Grid.Column="0"
                x:Name="d1Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="2"
                Grid.Row="4"
                Grid.Column="1"
                x:Name="d2Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="3"
                Grid.Row="4"
                Grid.Column="2"
                x:Name="d3Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="+"
                Grid.Row="4"
                Grid.Column="3"
                x:Name="addButton"
                Style="{StaticResource operatorButtonStyle}"/>

        
        <Button Content="0"
                Grid.Row="5"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                x:Name="d0Button"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="."
                Grid.Row="5"
                Grid.Column="2"
                x:Name="dotButton"
                Style="{StaticResource numberButtonStyle}"/>
        <Button Content="="
                Grid.Row="5"
                Grid.Column="3"
                x:Name="equalsButton"
                Style="{StaticResource operatorButtonStyle}"/>
    </Grid>
</Window>
